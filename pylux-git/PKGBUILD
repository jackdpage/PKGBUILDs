# Maintainer: Jack Page <jdpboc98@gmail.com>

pkgname=pylux-git
pkgver=0.3.1
pkgrel=1
pkgdesc='Lighting documentation editor'
arch=(any)
url='http://os.pwrg.uk/software/pylux'
license=('GPL3')
depends=('python' 'python-libxpx')
makedepends=('git')
provides=('pylux')
conflicts=('pylux')
source=('git://github.com/jackdpage/pylux.git')
md5sums=('SKIP')

pkgver() {
    cd ${srcdir}/pylux
    grep "version=" 'setup.py' | sed "s/[ ]*version='\([0-9]*\.[0-9]*\.[0-9]*\)',/\1/"
}

build() {
    cd ${srcdir}/pylux
    python setup.py build
}

package() {
    cd ${srcdir}/pylux
    python setup.py install --root=${pkgdir} --optimize=1
}
